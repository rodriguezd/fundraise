<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <%= f.label :event_name %><br />
    <%= f.text_field :event_name %>
  </div>
  <div class="field">
    <%= f.label :event_type %><br />
    <%= f.select :event_type, event_types %>
  </div>
  <div class="field">
    <%= f.label :event_date %><br />
    <%= f.date_select(:event_date, :order => [:month, :day, :year]) %>
  </div>
  <div class="field">
    <%= f.label :event_time %><br />
    <%= f.time_select(:event_time, :ampm => true) %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
      <%= f.select :state , us_states %>
  </div>
  <div class="field">
    <%= f.label :zip_code %><br />
    <%= f.text_field :zip_code %>
  </div>
    <%= f.hidden_field :user_id, :value => session[:user_id] %>
  <div class="actions">
    <%= f.submit "Create Event", class: "btn btn-large btn-primary" %>
  </div>
<% end %>
